<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScientificCalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="primaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">#CDFFFFFF</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAppearance">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="secondaryButtonStyle" parent="primaryButtonStyle">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
</resources>